generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Participant {
  id     String  @id @default(uuid())
  name   String  @unique
  email  String  @unique
  team   Team?   @relation(fields: [teamId], references: [id])
  teamId String? @unique
}

model Team {
  id           String        @id @default(uuid())
  participants Participant[]
}
